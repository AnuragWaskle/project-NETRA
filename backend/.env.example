# Backend environment example

# Flask
FLASK_ENV=production
PORT=5001

# CORS/front-end origin(s)
# e.g., https://your-frontend.vercel.app
FRONTEND_URL=

# Neo4j connection
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Optional: Google Gemini API key for summaries
GEMINI_API_KEY=
# Production Environment Variables Template
# Copy this to .env for local development or set as environment variables in your deployment platform

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
PORT=5001

# Neo4j Database Configuration (use Neo4j Aura for production)
NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-production-password

# Google Gemini AI Configuration
GEMINI_API_KEY=your-production-gemini-api-key

# CORS Configuration (update with your frontend domain)
FRONTEND_URL=https://your-app.vercel.app

# Security
SECRET_KEY=your-secret-key-for-sessions
